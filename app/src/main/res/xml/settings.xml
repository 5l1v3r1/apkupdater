<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="General Settings" app:iconSpaceReserved="false">
        <ListPreference
            app:key="@string/settings_theme_key"
            app:title="Theme"
            app:entries="@array/settings_theme_entries"
            app:entryValues="@array/settings_theme_values"
            app:defaultValue="2"
            app:summary="%s"
            app:iconSpaceReserved="false"
        />
        <SwitchPreferenceCompat
            app:key="@string/settings_source_apkmirror_key"
            app:title="APKMirror"
            app:defaultValue="true"
            app:iconSpaceReserved="false"
        />
        <SwitchPreferenceCompat
            app:key="@string/settings_source_aptoide_key"
            app:title="Aptoide"
            app:defaultValue="true"
            app:iconSpaceReserved="false"
        />
        <SwitchPreferenceCompat
            app:key="@string/settings_check_for_updates_key"
            app:title="@string/settings_check_for_updates_title"
            app:defaultValue="true"
            app:iconSpaceReserved="false"
        />
    </PreferenceCategory>
    <PreferenceCategory app:title="Apps" app:iconSpaceReserved="false">
        <SwitchPreferenceCompat
            app:key="@string/settings_exclude_system_key"
            app:title="@string/settings_exclude_system_title"
            app:summary=""
            app:defaultValue="true"
            app:iconSpaceReserved="false"
        />
        <SwitchPreferenceCompat
            app:key="@string/settings_exclude_disabled_key"
            app:title="@string/settings_exclude_disabled_title"
            app:defaultValue="true"
            app:iconSpaceReserved="false"
        />
    </PreferenceCategory>

    <PreferenceCategory app:title="APKMirror" app:iconSpaceReserved="false">
        <SwitchPreferenceCompat
            app:key="@string/settings_exclude_min_api_key"
            app:title="@string/settings_exclude_min_api_title"
            app:summary=""
            app:defaultValue="true"
            app:iconSpaceReserved="false"
        />
        <SwitchPreferenceCompat
            app:key="@string/settings_exclude_arch_key"
            app:title="@string/settings_exclude_arch_title"
            app:summary=""
            app:defaultValue="true"
            app:iconSpaceReserved="false"
        />
        <SwitchPreferenceCompat
            app:key="@string/settings_exclude_experimental_key"
            app:title="@string/settings_exclude_experimental_title"
            app:summary=""
            app:defaultValue="true"
            app:iconSpaceReserved="false"
        />
    </PreferenceCategory>

</PreferenceScreen>
